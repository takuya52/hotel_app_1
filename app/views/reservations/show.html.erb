<h3>予約内容の確認</h3>
  <% if flash[:notice] %>
    <p class = "notice"><%= flash[:notice] %>
  <% end %>
  <div class="row mb-3">
    <div class="col-sm-2">1日の料金</div>
    <div class="col-sm-10">
      <td>¥<%= @reservation.room.single_rate %>/日</td>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-sm-2">開始日</div>
    <div class="col-sm-10">
      <td><%= @reservation.start_date %></td>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-sm-2">終了日</div>
    <div class="col-sm-10">
      <td><%= @reservation.end_date %></td>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-sm-2">使用日数</div>
    <div class="col-sm-10">
      <td><%= (@reservation.end_date - @reservation.start_date).to_i %></td>  
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-sm-2">人数</div>
    <div class="col-sm-10">
      <td><%= @reservation.number_of_people %></td>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-sm-2">合計金額</div>
    <div class="col-sm-10">
      <td>¥<%= @reservation.room.single_rate * @reservation.number_of_people * (@reservation.end_date - @reservation.start_date).to_i %></td>
    </div>
  </div>